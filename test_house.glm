module ieee123_test;
  clock {
  	timezone "US/CA/San Francisco";
  	starttime "2019-01-01 00:00:00";
  	stoptime "2019-02-01 00:00:00";
  }
  module powerflow;
  module residential;
  object triplex_meter:..4 {
  	nominal_voltage 120;
  	phases AS;
  	object house:..4 {
  		heating_setpoint 68;
  		cooling_setpoint 76;
  		on_commit "python:ieee123_test.record_house";
  	};
  }

  object meter {
	name feeder_node;
	nominal_voltage 2401 V;
	phases ABCN;
	object recorder {
		property measured_real_energy, measured_reactive_energy;
		file "output/feeder_power/feeder_${RUN_NAME}.csv";
		interval 1h;
	};
  }